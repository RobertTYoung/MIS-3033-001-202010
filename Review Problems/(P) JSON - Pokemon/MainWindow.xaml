<Window x:Class="_P__JSON___Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_P__JSON___Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1305F6" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="POKEMON" HorizontalAlignment="Left" Height="56" Margin="270,23,0,0" VerticalAlignment="Top" Width="228" FontSize="48" FontFamily="Algerian"/>
        <ComboBox x:Name="cboPokemon" HorizontalAlignment="Left" Margin="12,89,0,0" VerticalAlignment="Top" Width="193" Height="33" SelectionChanged="cboPokemon_SelectionChanged"/>
        <Image x:Name="imagePokemon" HorizontalAlignment="Left" Height="267" Margin="426,114,0,0" VerticalAlignment="Top" Width="328"/>
        <Label Content="Weight" HorizontalAlignment="Left" Margin="176,308,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Height="26" Margin="270,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="176,355,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Height="26" Margin="270,355,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"/>
        <Label x:Name="lblPokemonName" Content="" HorizontalAlignment="Left" Height="37" Margin="576,42,0,0" VerticalAlignment="Top" Width="162"/>
        <Button x:Name="txtChangeView" Content="Change View Point" HorizontalAlignment="Left" Height="61" Margin="237,168,0,0" VerticalAlignment="Top" Width="167" Click="txtChangeView_Click"/>

    </Grid>
</Window>
